<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/invitation_list_data_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/invitation_list_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Detail"
        android:background="@color/constantColor"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/invitation_list_attend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attend"
        android:background="@color/constantColor"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/invitation_list_not_attend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Attend"
        android:background="@color/constantColor"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAllCaps="false"/>

</LinearLayout>