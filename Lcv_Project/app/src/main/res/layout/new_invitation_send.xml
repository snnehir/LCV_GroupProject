<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="490dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:gravity="center"
            android:background="@drawable/innovation_dialog_bg">

            <EditText
                android:id="@+id/innovation_editmsg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/new_innovation_edittext_bg"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="5dp" />


        </RelativeLayout>

        <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp"
            >
                    <ImageButton
                        android:id="@+id/innovation_iptal"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_baseline_close_24"
                        android:background="@drawable/innovation_dialog_btn_bg"/>

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="45dp"
                        android:background="@drawable/innovation_dialog_btn_bg">


                    <ImageButton
                        android:id="@+id/innovation_send"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_baseline_send_24"
                        android:background="@drawable/innovation_dialog_btn_bg"/>

                </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="3dp"
        android:id="@+id/innovation_dialog_imgKullaniciProfil"
        app:civ_border_color="@color/cerceve"/>
    <TextView
        android:id="@+id/innovation_dialog_kullanici_name"
        android:layout_below="@+id/innovation_dialog_imgKullaniciProfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"/>

</RelativeLayout>